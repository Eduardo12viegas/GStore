@model GStore.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/View/Shared/_LayoutAccount.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <h1 class="display-5 text-center">Gstore</h1>
    </div class="col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header">
                <h3 class="text-center font-weight-light my-4">Login</h3>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" hidden></div>
                    <input type="hiden" asp-for="UrlRetorno">
                    <div class="form-floating mb-3">
                        <input class="form-control" asp-for="Email" />
                        <label asp-form="Email"></label>
                        <span asp-asp-validation-for="Email" class="text-danger text-sm"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Senha" />
                            <label asp-for="Senha"></label>
                            <span asp-asp-validation-for="Senha" class="text-danger text-sm"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Senha" />  
                            <label asp-form=""
                            </div>
                    </div>
                </form>
            </div>
        </div>